<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    >


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbarHeight"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/menuBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/toolbarIconMargin"
            android:tag="icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="@dimen/iconTextPadding"
            android:textSize="@dimen/toolbarIconSize"
            android:textColor="@color/colorAccent"
            android:text="@string/menuIcon"
            />

        <Button
            android:id="@+id/searchBtn"
            android:layout_width="@dimen/viewsHeight"
            android:layout_height="@dimen/viewsHeight"
            android:gravity="start|center_vertical"
            android:layout_marginStart="@dimen/toolbarIconMargin"
            android:padding="@dimen/iconTextPadding"
            android:textSize="@dimen/toolbarIconSize"
            android:tag="icon"
            android:background="@color/login_form_details_ligth"
            android:textColor="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/searchIcon" />


        <EditText
            android:id="@+id/searchEditTxt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:background="@null"
            android:ems="10"
            android:hint="@string/type_shop_name"
            android:imeOptions="actionSearch"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:tag="bold"
            android:textColor="@color/white"
            android:textColorHint="@color/darkGrey"
            android:textCursorDrawable="@color/grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/menuBtn"
            app:layout_constraintStart_toEndOf="@id/searchBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />


    </android.support.constraint.ConstraintLayout>

</merge>